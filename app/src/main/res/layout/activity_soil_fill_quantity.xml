                            android:textColorHint="@color/greeen"
                            app:layout_constraintEnd_toEndOf="@+id/editTextNumberDecimal3"
                            app:layout_constraintTop_toBottomOf="@+id/textView740" />

                        <Spinner
                            android:id="@+id/spinner3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/greeen"
                            app:layout_constraintStart_toStartOf="@+id/spinner2"
                            app:layout_constraintTop_toTopOf="@+id/editTextNumberDecimal4" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout23"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                        <EditText
                            android:id="@+id/editTextNumber3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_number"
